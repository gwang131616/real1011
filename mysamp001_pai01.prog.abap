MODULE user_command_0100 INPUT.

  CASE ok_code.
    WHEN 'DTL'.
      gt_alv5[] = gt_data1[].
      gt_alv6[] = gt_data1[].
      CALL SCREEN 200 STARTING AT 10 10.

    WHEN 'S300'.
      gt_sdata[] = gt_data1[].
      CALL SCREEN 300 STARTING AT 10 10 ENDING AT 150 150.

    WHEN OTHERS.

  ENDCASE.

  CLEAR ok_code.

ENDMODULE.
